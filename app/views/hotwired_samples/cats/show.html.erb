<div class="container mx-auto">
  <h1 class="text-2xl font-bold mb-4"><%= t('activerecord.models.cat') %></h1>

  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <p class="text-gray-700 text-base mb-4">
      <strong><%= t('activerecord.attributes.cat.name') %>:</strong>
      <%= @cat.name %>
    </p>

    <p class="text-gray-700 text-base mb-4">
      <strong><%= t('activerecord.attributes.cat.age') %>:</strong>
      <%= @cat.age %>
    </p>

    <div class="flex items-center justify-between">
      <%= link_to t('helpers.links.edit'), edit_hotwired_samples_cat_path(@cat), class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to t('helpers.links.back'), hotwired_samples_cats_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
    </div>
  </div>
</div>
